<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ToddlerScanV2.View.ChangeGradeView">

    
    <ContentPage.Content>
        <StackLayout>
            <Label Text="{Binding SelectedToddler.FirstName}"/>
            <Label Text="{Binding SelectedToddler.LastName}"/>
            <Entry Text="{Binding SelectedToddler.Grade}" />
            <Button x:Name="changeGradeButton" Text="Change grade" Command="{Binding changeGradeButtonClicked}"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>