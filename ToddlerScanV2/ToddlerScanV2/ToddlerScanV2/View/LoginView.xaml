<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ToddlerScanV2.View.LoginView">
    <ContentPage.Content>
        <StackLayout>
            <Label x:Name="lbl_username" Text="Username"/>
            <Entry x:Name="entry_username" Text="{Binding Username}"/>
            <Label x:Name="lbl_password" Text="Password"/>
            <Entry x:Name="entry_password" IsPassword="True" Text="{Binding Password}"/>
            <Button x:Name="btn_signin" Text="Sign In" Command="{Binding SignInProcedure}"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>