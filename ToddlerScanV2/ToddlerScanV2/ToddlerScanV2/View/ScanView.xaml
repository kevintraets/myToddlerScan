<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ToddlerScanV2.View.ScanView"
             xmlns:local="crl-namespace:ToddlerScanV2.Picture">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="ScanView"
                VerticalOptions="CenterAndExpand" 
                HorizontalOptions="CenterAndExpand" />
            <Button Text="Scan" Command="{Binding QRScanned}"></Button>
            <Label Text="{Binding ScanConfirmed}"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>